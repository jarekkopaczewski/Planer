<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mobile_navigation"
            app:startDestination="@+id/nav_home">

    <fragment
            android:id="@+id/nav_home"
            android:name="skills.future.planer.ui.home.HomeFragment"
            android:label="@string/menu_home"
            tools:layout="@layout/fragment_home">
        <action android:id="@+id/action_nav_home_to_nav_gallery" app:destination="@id/nav_gallery"/>
        <action android:id="@+id/action_nav_home_to_nav_slideshow" app:destination="@id/nav_slideshow"/>
    </fragment>

    <fragment
            android:id="@+id/nav_gallery"
            android:name="skills.future.planer.ui.gallery.GalleryFragment"
            android:label="@string/menu_gallery"
            tools:layout="@layout/fragment_gallery"/>

    <fragment
            android:id="@+id/nav_slideshow"
            android:name="skills.future.planer.ui.slideshow.SlideshowFragment"
            android:label="@string/menu_slideshow"
            tools:layout="@layout/fragment_slideshow"/>
    <fragment android:id="@+id/nav_month" android:name="skills.future.planer.ui.month.MonthFragment"
              android:label="menu_month" tools:layout="@layout/fragment_month">
        <action android:id="@+id/action_nav_month_to_nav_day" app:destination="@id/nav_day"/>
        <action android:id="@+id/action_nav_month_to_nav_task_list" app:destination="@id/nav_task_list"/>
    </fragment>
    <fragment android:id="@+id/nav_day" android:name="skills.future.planer.ui.day.DayFragment" android:label="menu_day"
              tools:layout="@layout/fragment_day"/>
    <fragment android:id="@+id/nav_task_list" android:name="skills.future.planer.ui.tasklist.TaskListFragment"
              android:label="menu_task_list" tools:layout="@layout/fragment_task_list"/>
</navigation>