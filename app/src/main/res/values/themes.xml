<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Planer" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/second_color_30</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">#40b0df</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="taskViewBottom">@color/taskListBottomColor</item>
        <item name="navigationBarColor">@color/navigationBarColor</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/taskViewBottom</item>
        <item name="imageTint">@color/imageTintColor</item>

    </style>
    <style name="Theme.Planer.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Planer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.Planer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>