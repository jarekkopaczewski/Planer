<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.habit.HabitCreatorActivity"
    >

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveCreatorButtonHabit"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:clickable="true"
        android:contentDescription="@string/save_button_description"
        android:foreground="@drawable/save"
        android:foregroundGravity="fill_horizontal|center|fill_vertical"
        android:foregroundTint="@color/imageTintColor"
        android:scaleType="center"
        android:text="@string/TaskListElementFabricButton"
        android:tint="@color/imageTintColor"
        app:backgroundTint="@color/second_color_30"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.98"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.98"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <androidx.constraintlayout.widget.ConstraintLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/background">

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/imageTintColor"
                    android:backgroundTint="@color/imageTintColor_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/imageTintColor"
                    android:backgroundTint="@color/imageTintColor_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTitle" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@color/imageTintColor"
                    android:backgroundTint="@color/imageTintColor_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTitle6" />

                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/imageTintColor"
                    android:backgroundTint="@color/imageTintColor_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView8" />

                <TextView
                    android:id="@+id/editTextTitle3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:autofillHints="Dodaj tytuł"
                    android:background="@null"
                    android:fontFamily="@font/signika_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/EditTextTitleHintt"
                    android:lines="2"
                    android:minHeight="48dp"
                    android:scrollHorizontally="false"
                    android:text="Dni aktywności nawyku:"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view" />

                <TextView
                    android:id="@+id/editTextTitle2"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="15dp"
                    android:autofillHints="Dodaj tytuł"
                    android:background="@null"
                    android:fontFamily="@font/signika_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/EditTextTitleHintt"
                    android:lines="2"
                    android:minHeight="48dp"
                    android:scrollHorizontally="false"
                    android:text="Okres wyrabiania nawyku:"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view4" />

                <TextView
                    android:id="@+id/editTextTitle6"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:autofillHints="Dodaj tytuł"
                    android:background="@null"
                    android:fontFamily="@font/signika_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/EditTextTitleHintt"
                    android:lines="2"
                    android:minHeight="48dp"
                    android:scrollHorizontally="false"
                    android:text="Wybierz cel:"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTitle2" />

                <TextView
                    android:id="@+id/editTextTitle4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:autofillHints="Dodaj tytuł"
                    android:background="@null"
                    android:fontFamily="@font/signika_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/EditTextTitleHintt"
                    android:lines="2"
                    android:minHeight="48dp"
                    android:scrollHorizontally="false"
                    android:text="Godzina przypomnienia o nawyku:"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView" />

                <TextView
                    android:id="@+id/editTextTitle5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:autofillHints="Dodaj tytuł"
                    android:background="@null"
                    android:fontFamily="@font/signika_regular"
                    android:gravity="center_vertical"
                    android:hint="@string/EditTextTitleHintt"
                    android:lines="2"
                    android:minHeight="48dp"
                    android:scrollHorizontally="false"
                    android:text="Data rozpoczęcia nawyku:"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/timeEditText" />

                <HorizontalScrollView
                    android:id="@+id/horizontalScrollView2"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.473"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTitle3"
                    app:layout_constraintVertical_bias="0.0">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/daysChipGroupOne"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="7dp"
                            android:layout_weight="1"
                            android:visibility="visible"
                            tools:visibility="visible">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/MondayChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:checked="true"
                                android:text="Pn" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/TuesdayChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:checked="true"
                                android:text="Wt" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/WednesdayChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:checked="true"
                                android:text="Śr" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/ThursdayChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:checked="true"
                                android:text="Czw" />

                        </com.google.android.material.chip.ChipGroup>

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/daysChipGroupTwo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="7dp"
                            android:layout_marginEnd="7dp"
                            android:layout_weight="1">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/FridayChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:checked="true"
                                android:text="Pt" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/SaturdayChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:checked="true"
                                android:text="So" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/SunDayChip"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checkable="true"
                                android:checked="true"
                                android:text="Nd" />
                        </com.google.android.material.chip.ChipGroup>

                    </LinearLayout>
                </HorizontalScrollView>

                <EditText
                    android:id="@+id/editTextTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:autofillHints="Dodaj tytuł"
                    android:background="@null"
                    android:fontFamily="@font/signika_regular"
                    android:hint="Nazwa nawyku"
                    android:inputType="textMultiLine"
                    android:lines="2"
                    android:minHeight="48dp"
                    android:scrollHorizontally="false"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.skydoves.powerspinner.PowerSpinnerView
                    android:id="@+id/spinner"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/background"
                    android:fontFamily="@font/signika_regular"
                    android:gravity="center|center_vertical"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/editTextTitle2"
                    app:layout_constraintTop_toBottomOf="@+id/imageView4"
                    app:layout_constraintVertical_bias="0.0"
                    app:spinner_arrow_gravity="end"
                    app:spinner_divider_color="@color/imageTintColor"
                    app:spinner_divider_show="true"
                    app:spinner_divider_size="0.2dp"
                    app:spinner_item_array="@array/temp_array" />

                <com.skydoves.powerspinner.PowerSpinnerView
                    android:id="@+id/spinner2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:background="@color/background"
                    android:fontFamily="@font/signika_regular"
                    android:gravity="center|center_vertical"
                    android:textSize="18sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/editTextTitle2"
                    app:layout_constraintTop_toBottomOf="@+id/spinner"
                    app:layout_constraintVertical_bias="0.0"
                    app:spinner_arrow_gravity="end"
                    app:spinner_divider_color="@color/imageTintColor"
                    app:spinner_divider_show="true"
                    app:spinner_divider_size="0.2dp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:alpha="0.2"
                    android:background="@drawable/shadow"
                    android:backgroundTint="@color/imageTintColor_2"
                    android:rotationX="180"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view5" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:alpha="0.1"
                    android:background="@drawable/shadow"
                    android:backgroundTint="@color/imageTintColor_2"
                    android:rotationX="180"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:alpha="0.2"
                    android:background="@drawable/shadow"
                    android:backgroundTint="@color/imageTintColor_2"
                    android:rotationX="180"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view6" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:alpha="0.2"
                    android:background="@drawable/shadow"
                    android:backgroundTint="@color/imageTintColor_2"
                    android:rotationX="180"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view4" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    android:alpha="0.2"
                    android:background="@drawable/shadow"
                    android:backgroundTint="@color/imageTintColor_2"
                    android:rotationX="180"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:alpha="0"
                    android:background="@drawable/shadow"
                    android:backgroundTint="@color/imageTintColor"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toTopOf="@+id/imageView"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTitle6"
                    app:layout_constraintVertical_bias="1.0" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:alpha="0"
                    android:background="@drawable/shadow"
                    android:backgroundTint="@color/imageTintColor"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalScrollView2" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:alpha="0"
                    android:background="@drawable/shadow"
                    android:backgroundTint="@color/imageTintColor"
                    android:scaleType="fitXY"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextDateHabit"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/timeEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="50dp"
                    android:editable="false"
                    android:ems="10"
                    android:fontFamily="@font/signika_regular"
                    android:hint="godzina powiadomienia"
                    android:inputType="time"
                    android:textColor="@color/textColor"
                    android:textSize="17sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTitle4"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/editTextDateHabit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="50dp"
                    android:ems="10"
                    android:fontFamily="@font/signika_regular"
                    android:hint="data rozpoczęcia nawyku"
                    android:inputType="date"
                    android:textColor="@color/textColor"
                    android:textSize="17sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTitle5" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
